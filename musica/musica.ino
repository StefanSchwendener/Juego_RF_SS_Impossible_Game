int notes = sizeof(DOOM) / sizeof(DOOM[0]) / 2;
int wholenote = (240000) / 225;

int divider = 0, noteDuration = 0;

void setup() {
  // CONFIGURACION DE PUERTOS
  pinMode(A1, OUTPUT); // AN1 salida para el buzzer
  pinMode(3, INPUT); // ENTRADA DE LA SENAL DIGITAL DEL MICROCONTROLADOR 2 PARA EL GAME OVER
  pinMode(2, INPUT); // Entrada de senal digital del microcontroladro 2 PARA EL SALTO
}

void loop() {
  for (int thisNote = 0; thisNote < notes * 2; thisNote = thisNote + 2) {
    // OBTENEMOS INFORMACION DEL OTRO MICROCONTROLADOR HACIENDO UNA LECTURA DEL PUERTO D2
    senal = digitalRead(2);
    over = digitalRead(3);
    // CALCULAMOS LA DURACION DE CADA NOTA CON ESTA FUNCION
    divider = pgm_read_word_near(225+thisNote + 1);
    if (divider > 0) {
      // regular note, just proceed
      noteDuration = (wholenote) / divider;
    } else if (divider < 0) {
      // dotted notes are represented with negative durations!!
      noteDuration = (wholenote) / abs(divider);
      noteDuration *= 1.5; // increases the duration in half for dotted notes
    }
    if(senal == LOW && over == LOW){
      // Las notas de este tono fueron tomadas del codigo del codigo de robsoncouto en: https://github.com/robsoncouto/arduino-songs/blob/master/doom/doom.ino
      tone(A1, pgm_read_word_near(DOOM+thisNote), noteDuration * 0.9);
      delay(noteDuration);
      } else if(senal == HIGH && over == LOW){
        // este sonido es de Mario y fue obtenido de la libreria de martinus96 en: https://forum.arduino.cc/index.php?topic=623141.0
        tone(A1, NOTE_G4, 47);
        delay(120);
        tone(A1, NOTE_GS4, 47);
        delay(48);
        tone(A1, NOTE_A5, 47);
        delay(96);
        tone(A1, NOTE_C6, 24);
        delay(24);
        tone(A1, NOTE_CS5, 24);
        delay(48);
        tone(A1, NOTE_C6, 24);
        delay(24);
        tone(A1, NOTE_CS5, 24);
        delay(24);
        tone(A1, NOTE_D5, 24);
        delay(24);
        tone(A1, NOTE_DS5, 25);
        delay(24);
        tone(A1, NOTE_E5, 48);
        delay(48);
        } else if(over == HIGH){
          tone(A1,NOTE_G4);
          delay(250);
          tone(A1,NOTE_C4);
          delay(500);
        }
        // Limpiamos el ultimo tono
        noTone(A1);
      }
}
